@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Proyecto Facturacion @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
        .navbar {
            background-color: #333;
            height: 80px; /* Ajusta la altura según tus necesidades */
        }

        .navbar-brand,
        .nav-link {
            color: #fff;
            text-transform: uppercase;
            font-weight: bold;
        }

        .nav-link {
            padding: 10px 20px;
            margin: 0 5px;
            transition: background-color 0.3s;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
        }

            .nav-link:hover,
            .nav-link:focus {
                background-color: #0056b3;
                color: #fff;
            }

            .nav-link.active {
                background-color: #0056b3;
                color: #fff;
            }

        .container {
            margin-top: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            color: #333;
        }

        footer {
            background-color: #f8f8f8;
            padding: 20px;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
            border-radius: 5px;
            padding: 10px 20px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        /* Estilos para el dropdown */
        .dropdown-menu {
            min-width: 200px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 1);
           
            
            border : 1px solid #ccc;

            border-radius: 7px;
        }

        .dropdown-item {
            color: #3271ad;
            padding: 8px 20px;
            transition: background-color 0.3s;
        }

            .dropdown-item:hover,
            .dropdown-item:focus {
                background-color: #5d7082;
                color: #000;
            }
        .navbar-toggler-icon {
            background-image: url('https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css');
            width: 24px;
            height: 24px;
        }





    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Facturacion.WebMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="detalleFacturaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Detalle y Cabecera
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="detalleFacturaDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="DetalleFactura" asp-action="Index">Lista de Detalles</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="FactFacturaCabecera" asp-action="Index">Lista de Cabeceras</a>
                                </li>
                            </ul>
                        </li>
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="factCliente" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="tipopago" asp-action="Index">Tipos pagos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="productos" asp-action="Index">Productos</a>
                        </li>










                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>





    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Facturacion.WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>